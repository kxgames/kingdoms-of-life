  String capital_list[] = ["Paris", "Austria", "Tuscany", "Castile", "Portugal", "Great Britain", "Holland", "Sweden", "Saxony", "Brandenburg", "Russia", "Poland", "Bavaria", "Turkey", "Egypt", "Tunisia", "Sardina", "Switzerland"];
