include "game_structs.bhs"

//ctw diplomacy function library
String conquest capitalize(String nation);
int[] conquest sum_bonus_cards_value(ConquestDiploOffer offer);

int conquest get_territory_value(String tribe, String territory);
int[] conquest sum_territory_value(ConquestDiploOffer offer);

int conquest total_deal_value_tribe(ConquestDiploOffer offer, int offerer);
int conquest nation_worth(String tribe);
String conquest add_territory(ref ConquestDiploOffer offer); 
String conquest add_card(ref ConquestDiploOffer offer);
int conquest add_tribute(ref ConquestDiploOffer offer);
int [] conquest do_counter_offer(ref ConquestDiploOffer offer, int deal_value1, int deal_value2, String preference);
       
int conquest diplo_response (ref ConquestDiploOffer offer)
{
  int their_value = 0;
  int your_value = 0;
  int their_trib = get_num_tribute(offer.tribe2);
  int i = 0;
  int n = 0;
  int num = 0;
  int random_response = 0;
  int counter_value = 0;
  int time_held = 1;
  int you = 0;
  int them = 1;
  static int deal_value[] = [0,0];
  deal_value[0] = total_deal_value_tribe(offer, 0);
  deal_value[1] = total_deal_value_tribe(offer, 1);
  String capital_name = ctw_get_nation_capital(offer.tribe2);
  int peace_cost = 20; //base cost
  int ally_cost = 20; //base cost
  int vassal_cost = 10000; //base cost

  int attitude_adjustment = 0; ////positive value means they hate you, negative value means they like you

  int ctw_territory_min_emp_size = 4;
  int num_active_leaders = get_num_active_nations();
  int ctw_additional_ally_inc = 100;
  int ctw_base_build_cost = 20;
  int ctw_build_cost_time_held_x = 5;
  int max_turns = ctw_get_num_campaign_turns();
  int ctw_colony_modifier = 0;

  int ctw_colony_trib_income = 0;

  int num_left_modifier = 1000;
  if (get_num_active_nations() < 5 && get_num_territories(offer.tribe) < get_num_territories(offer.tribe2)) {
    num_left_modifier /= get_num_active_nations();
  }
  else {
    num_left_modifier = 0;
  }

  if (offer.offer_type == "Exchange") {
    if (offer.tribe_terr.length == 0 && offer.tribe2_terr.length == 0) {
      if (offer.tribe_cards.length == 0 && offer.tribe2_cards.length == 0) {
        offer.accepted = false;
        random_response = rand_int(1,5);
        switch(random_response) {
          case 1:
            offer.response = $S("Are you here to negotiate, or to waste our time?");
            break;
          case 2:
            offer.response = $S("We tire of your games. Offer us a real proposal, or be done with it!");
            break;
          case 3:
            offer.response = $S("Apparently negotiation is not one of the finer points of education in your nation.");
            break;
          case 4:
            offer.response = $S("We did not come here to play around. If this is the best you can offer, then perhaps we should end these negotiations.");
            break;
          default:
            offer.response = $S("That is one of the worst offers I have ever seen. Is it some kind of joke?");
            break;  
        }
        return 0;
      }
    }
  }

  peace_cost += num_left_modifier;
  ally_cost += ctw_get_num_allies(offer.tribe) * ctw_additional_ally_inc + ctw_get_num_allies(offer.tribe2) * ctw_additional_ally_inc + num_left_modifier;
  vassal_cost += (get_num_territories(offer.tribe2)-1) * 40 + num_left_modifier;

  if (offer.tribe2 == "Egyptian") {
    if (ctw_is_war("Persian", "Greeks") && ctw_is_war("Egyptian", "Persian") && offer.offer_type == "Ally") {
      attitude_adjustment += -10;
    }
    else if (ctw_is_war("Egyptians", "Romans") == 1) {
      ally_cost += get_turn();
    }
    else if (get_num_ally("Egyptians") > 0 && get_turn() < 10) {
      ally_cost += get_turn();
    }
    else if (get_num_ally("Egyptians") > 0 && get_turn() > 9) {
      attitude_adjustment += 100;
    }
    else {
      ally_cost += get_turn();
    }
    vassal_cost = 100;
  }

  if (offer.tribe2 == "Indians") {
    if (get_turn() > 9 && get_turn() < 13) {
      offer.response = $S("Unfortunately, diplomacy with the Indians is not an option at this time. Their leader Dhana Nanda is fighting a civil war led by the upstart Chandragupta Maurya. Hopefully once this war is settled, we can reopen talks with the Indians.");
      offer.accepted = false;
      return 1;
    }
    else if (get_turn() > 12) {
      attitude_adjustment += 100;
    }
  }

  if (offer.tribe2 == "Persian") {
    if (get_ctw_int("darius_offer") == 3 && get_country_owner("Lydia") == "Greeks" && get_country_owner("Egypt") != "Greeks") {
      attitude_adjustment += 10;
    }
    else if (get_ctw_int("darius_offer") == 1 && get_ctw_int("greeks_stuff") == 2) {
      attitude_adjustment += -5;
    }
    else if (get_ctw_int("darius_offer") == 2) {
      attitude_adjustment += -25;
    }
    else if (get_num_territories("Persian") < 5) {
      attitude_adjustment += 100;
    }
    else if (get_num_territories("Greeks") < 5 && get_num_territories("Greeks") > 2) {
      attitude_adjustment += 100;
    }
    else if (get_num_territories("Greeks") < 3) {
      attitude_adjustment += 100;
    }
  }

  if (offer.tribe2 == "Romans") {
    if (get_ctw_int("atrocity") > 1) {
      offer.accepted = false;
      offer.response = $S("After the atrocity you committed on the Thebans, I am surprised that you are even showing your face around here.");
      return 1;
    }
    else if (ctw_is_ally("Romans", "Egyptians") == 1 && ctw_is_war("Egyptians", "Greeks") == 1) {
      attitude_adjustment += 40;
    }
    else if (ctw_is_ally("Romans", "Persian") == 1 && ctw_is_war("Persian", "Greek") == 1) {
      attitude_adjustment += 80;
    }
    else if (get_turn() < 10) {
      if (get_num_territories("Greeks") > 4 && get_num_territories("Romans") < 4) {
        attitude_adjustment += 10;
      }
      else if (get_num_territories("Greeks") > 4 && get_num_territories("Romans") > 4) {
        attitude_adjustment += -10;
      }
      else {
        attitude_adjustment += 5;
      }
    }
    else if (get_turn() > 9) {
      attitude_adjustment += 100;
    }
  }

  
////////////////////////////////////////////////////////////////////////////
////////////////////Default Responses for all Nations///////////////////////
////////////////////////////////////////////////////////////////////////////


  if (offer.offer_type == "Ally") {
    deal_value[them] += ally_cost;
  }
  else if (offer.offer_type == "Peace") {
    deal_value[them] += peace_cost;
  }
  else if (offer.offer_type == "Vassal") {
    deal_value[them] += vassal_cost;
  }
  deal_value[them] += attitude_adjustment;

  //if the player just doesn't have enough
  if (deal_value[them] > nation_worth("Greeks")) {
    offer.accepted = false;
    random_response = rand_int(1,5);
    switch (random_response) {
      case 1:
        offer.response = $S("Unfortunately you have nothing of interest to us at present.");
        break;
      case 2:
        offer.response = $S("You will need to find more to offer us if you want us to agree to deal.");
        break;
      case 3:
        offer.response = $S("Conquer more territories and maybe then we will negotiate.");
        break;
      default:
        offer.response = $S("There is nothing you presently have that would compell us to sign that agreement.");
        break;
    }
    return 0;
  }

  //if they have not much territory, they want territory themselves, or they want more stuff..........
  if (offer.tribe2_terr.length > 0 && (get_num_territories(offer.tribe2) - offer.tribe2_terr.length + offer.tribe_terr.length) < ctw_territory_min_emp_size) {
    deal_value = do_counter_offer(offer, deal_value[0], deal_value[1], "territory");
    return 0;
  }

  /////If there are only two nations left the other guy won't sign any deals or trade anything
  if (get_num_active_nations() == 2) {
    offer.accepted = false;
    offer.response = $S("We have no interest in negotiating with you. All we need to do is conquer your nation and the world will be ours.");
    return 0;
  }

  your_value = deal_value[you];
  their_value = deal_value[them];

  //////////////////////Peace Proposal//////////////////////////
  if (offer.offer_type == "Peace") {
    if (ctw_is_ally(offer.tribe, offer.tribe2)) {
      offer.accepted = false;
      random_response = rand_int(1, 5);
      switch (random_response) {
        default:
          offer.response = $S("There is no need for a peace agreement between us since we are already allies.");
          break;
      }
      return 0;
    }
    //////////////evaluate deal//////////////////////
    if (your_value > their_value) {/////////value for peace
      offer.accepted = true;
      random_response = rand_int(1, 6);
      switch (random_response) {
        case 1:
          offer.response = $S("Yes, let us end this terrible war!");
          break;
        case 2:
          offer.response = $S("Very well. We will end this war and sign your peace treaty.");
          break;
        default:
          offer.response = $S("These are excellent terms! We will agree to this peace treaty.");
          break;
      }
      if (offer.tribe2 == "Egyptians") {
        if (ctw_is_war("Persian", "Egyptians") == 1) {
          if (ctw_is_war("Persian", "Greeks") == 1) {
            offer.response = $S("Any enemy of Persia cannot be an enemy of ours. Let our war end, at no more cost to either side.");
          }
          else {
            offer.response = $S("We happily look foward to peace. We are embroiled in a terrible war with the Persians.");
          }
        }
        else if (ctw_is_war("Egyptians", "Romans") == 1) {
          offer.response = $S("We happily look foward to peace. We do not wish to be distracted from our war with the Romans.");
        }
        else if (get_num_ally("Egyptians") > 0 && get_turn() < 10) {
          if (ctw_is_ally("Egyptians", "Persian") == 1 && ctw_is_war("Greeks", "Persian") == 1) {
            offer.response = $S("Even though our allies the Persians would not be happy with us ending war against you, we cannot forget the friendship we had with your father. We accept.");
          }
          else if (ctw_is_ally("Egyptians", "Romans") == 1 && ctw_is_war("Greeks", "Romans") == 1) {
            offer.response = $S("Even though our allies the Romans would not be happy with us ending war against you, we cannot forget the friendship we had with your father. We accept.");
          }
          else if (ctw_is_ally("Egyptians", "Indians") == 1 && ctw_is_war("Greeks", "Indians") == 1) {
            offer.response = $S("Even though our allies the Indians would not be happy with us ending war against you, we cannot forget the friendship we had with your father. We accept.");
          }
        }
      }
      else if (offer.tribe2 == "Indians") {
        if (get_turn() < 10) {
          if (ctw_is_war("Indians", "Persian") == 1) {
            offer.response = $S("How fortunate for us that you are offering an end to this war. Our war with Persia is costing us much Tribute. Please send us $NUM0 Tribute and our treaty of peace will be signed.");
          }
          else {
            switch (random_response) {
              case 1:
                offer.response = $S("We might not know much about one another, but we can both see that an end to this war makes sense.");
                break;
              case 2:
                offer.response = $S("While our people may live far apart from one another, they are not far apart in spirit. We will sign your peace treaty.");
                break;
              default:
                offer.response = $S("Your treaty of peace shall be signed.");
                break;
            }
          }    
        }
      }
      else if (offer.tribe2 == "Persian") {
        if (get_ctw_int("darius_offer") == 1 && get_country_owner("Lydia") == "Greeks" && get_country_owner("Egypt") != "Greeks") {
          clear_ctw_val("darius_offer");
          offer.response = $S("I am glad that you have seen the error of your ways. War is not good for anybody."); //1st peace offering
        }
        else if (get_ctw_int("darius_offer") == 2 && get_ctw_int("greeks_stuff") == 2) {
          clear_ctw_val("darius_offer");
          offer.response = $S("You and your Greek allies have caused quite the stir with your war on my empire. I was wondering when you would come to your senses."); //2nd peace offering
        }
        else if (get_ctw_int("darius_offer") == 3) {
          clear_ctw_val("darius_offer");
          offer.response = $S("Thank goodness you are finally willing to bring this horrible war to an end. I have not slept a night since this all began.");
        }
        else {
          random_response = rand_int(1, 6);
          switch (random_response) {
            case 1:
            offer.response = $S("Yes, let us end this terrible war!");
              break;
            case 2:
              offer.response = $S("Very well. We will end this war and sign your peace treaty.");
              break;
            default:
              offer.response = $S("These are excellent terms! We will agree to this peace treaty.");
              break;
          }
        }
      }
      else if (offer.tribe2 == "Romans") {
        if (get_turn() < 10) {
          if (ctw_is_ally("Romans", "Egyptians") == 1 && ctw_is_war("Egyptians", "Greeks") == 1) {
            offer.response = $S("Our allies the Egyptians will not be very happy with us for doing this, but they do not control us. We accept.");
          }
          else if (ctw_is_ally("Romans", "Persian") == 1 && ctw_is_war("Persian", "Greek") == 1) {
            offer.response = $S("Our allies the Persians will not be very happy with us for doing this, but they do not control us. We accept.");
          }
          else if (get_num_territories("Greeks") > 4 && get_num_territories("Romans") < 4) {
            switch (random_response) {
              case 1:
                offer.response = $S("Out of respect for your great empire, how can we refuse such an offer?");
                break;
              case 2:
                offer.response = $S("Peace with an empire such as yours would be most acceptable.");
                break;
              default:
                offer.response = $S("We humbly appreciate your offer, great Alexander. We accept.");
                break;
            }
          }
          else if (get_num_territories("Greeks") > 4 && get_num_territories("Romans") > 4) {
            switch (random_response) {
              case 1:
                offer.response = $S("What a marvelous idea that is. We will sign the peace treaty.");
                break;
              case 2:
                offer.response = $S("Our two empires side by side in peace is a beautiful image.");
                break;
              default:
                offer.response = $S("We have listened to your offer and come to a decision. We accept.");
                break;
            }
          }
          else {
            switch (random_response) {
              case 1:
                offer.response = $S("We accept your deal.");
                break;
              case 2:
                offer.response = $S("Funny you should ask that, I was just about to send you the very same proposal!");
                break;
              default:
                offer.response = $S("What a great idea. Why not? We agree.");
                break;
            }
          }
        }
      }
      return 0;
    }
    else {//counter-offer
      if (offer.tribe2 == "Egyptians") {
        if (get_num_ally("Egyptians") > 0 && get_turn() > 9) {
          if (ctw_is_ally("Egyptians", "Persian") == 1 && ctw_is_war("Greeks", "Persian") == 1) {
            offer.response = $S("We are sorry, but our allies the Persians would not be happy with us making peace with you.");
            offer.accepted = false;
          }
          else if (ctw_is_ally("Egyptians", "Romans") == 1 && ctw_is_war("Greeks", "Romans") == 1) {
            offer.response = $S("We are sorry, but our allies the Romans would not be happy with us making peace with you.");
            offer.accepted = false;
          }
          else if (ctw_is_ally("Egyptians", "Indians") == 1 && ctw_is_war("Greeks", "Indians") == 1) {
            offer.response = $S("We are sorry, but our allies the Indians would not be happy with us making peace with you.");
            offer.accepted = false;
          }
          else {
          offer.accepted = false;
          switch (random_response) {
            case 1:
              offer.response = $S("While that might be a good idea to you, it is not to me. Be very glad that we are not razing your towns as we speak.");
              offer.accepted = false;
              break;
            case 2:
              offer.response = $S("Funny you should ask that, as it is such a bad idea. Please keep such ideas to yourself in the future.");
              offer.accepted = false;
              break;
            default:
              offer.response = $S("I think that a deal can be reached very soon. Very soon meaning never, that is. Go away.");
              offer.accepted = false;
              break;
          }          
          }
        }
      }
      else if (offer.tribe2 == "Persian") {
        if (get_num_territories("Persian") < 5) {
          switch (random_response) {
            case 1:
              offer.response = $S("The Persian diplomat laughed at the thought of peace. I guess they are a little mad about you destroying their once mighty empire.");
              offer.accepted = false;
              break;
            case 2:
              offer.response = $S("Well, there is good news, and there is bad news. The bad news is the Persians are not interested in peace. The good news is that they are no longer of any importance anyway.");
              offer.accepted = false;
              break;
            default:
              offer.response = $S("One day long ago I wished that our empires would see peace. Sadly, this war has carried on for too long for that to be an option anymore.");
              offer.accepted = false;
              break;
          }
        }

        else if (get_num_territories("Greeks") < 3) {
          switch (random_response) {
            case 1:
              offer.response = $S("Well, I did not think it possible for a man to die from laughter, but the assistant to the Persian diplomat looked close to it when the matter was brought up with him.");
              offer.accepted = false;
              break;
            case 2:
              offer.response = $S("Response from the assistant to the Persian diplomat: Compared to us, your nation is an ant colony just waiting to be stepped on.");
              offer.accepted = false;
              break;
            default:
              offer.response = $S("Message from your Advisor: We were not able to procure a meeting with the assistant to the Persian diplomat.");
              offer.accepted = false;
              break;
          }
        }
        else {//if (get_num_territories("Greeks") < 5 && get_num_territories("Greeks") > 2) {
          switch (random_response) {
            case 1:
              offer.response = $S("Response from the assistant to the Persian diplomat: We do not have time to talk about such matters with the likes of you.");
              offer.accepted = false;
              break;
            case 2:
              offer.response = $S("Response from the assistant to the Persian diplomat: And what benefit would that give us again?");
              offer.accepted = false;
              break;
            default:
              offer.response = $S("Response from the assistant to the Persian diplomat: Do us both a favor and leave me alone.");
              offer.accepted = false;
              break;
          }
        }
      }
      if (offer.accepted != false) {    
        deal_value = do_counter_offer(offer, deal_value[0], deal_value[1], "territory");
        //random_response = rand_int(1, 6);
        //switch (random_response) {
          //case 1:
           // offer.response = $S("Why would we agree to such a thing? Here is a deal that is much more to our liking.");
            //break;
          //case 2:
            //offer.response = $S("Only a fool would sign such a treaty! Here is one more to our liking.");
            //break;
          //case 3:
           // offer.response = $S("Only terms along these lines will end this war.");
           // break;
          //case 4:
           // offer.response = $S("We are not as weak as you, we will see this war through until the very end. However, there is room for negotiation.");
            //break;
          //default:
           // offer.response = $S("We do not see how this benefits us. Consider our counter-proposal instead.");
           // break;
        //}
      }
      return 0;
    }
  }
  //////////////////////Alliance Proposal//////////////////////////
  else if (offer.offer_type == "Ally") {
    if (ctw_is_war(offer.tribe, offer.tribe2)) {
      offer.accepted = false;
      random_response = rand_int(1, 5);
      switch (random_response) {
        default:
          offer.response = $S("Perhaps it would be better if we negotiated peace before talking about alliances.");
          break;
      }
      return 0;
    }

    if (ctw_get_num_allies(offer.tribe2) > 1) {
      offer.accepted = false;
      random_response = rand_int(1, 5);
      switch (random_response) {
        default:
          offer.response = $S("No thank you. We have enough allies at the moment.");
          break;
      }
      return 0;
    }
    ////////////////evaluate deal////////////////
    if (your_value > their_value) {/////////alliance value
      offer.accepted = true;
      random_response = rand_int(1, 6);
      switch (random_response) {
        case 1:
          offer.response = $S("We were just coming to you with the same deal! We believe our nations will work well together.");
          break;
        case 2:
          offer.response = $S("We look forward to working with you.");
          break;
        default:
          offer.response = $S("These are excellent terms! We will agree to this alliance.");
          break;
      }
      if (offer.tribe2 == "Egyptians") {
        if (ctw_is_war("Persian", "Greeks") && ctw_is_war("Egyptian", "Persian")) {
          switch (random_response) {
            case 1:
              offer.response = $S("Any enemy of the Persians is a friend of ours.");
              break;
            case 2:
              offer.response = $S("This alliance offer could not have come at a better time. The Persians are threatening us from the east. Come help us fight them, and the customary tribute for an alliance will be waived.");
              break;
            case 3:
              offer.response = $S("You are a good man, just as your father was. Let us sign this alliance treaty immediately.");
              break;
            default:
              offer.response = $S("We could definitely use a friend in our war against the Persians. We accept.");
              break;
          }
        }
        else if (ctw_is_war("Egyptians", "Romans") == 1) {
          offer.response = $S("An alliance would be wonderful, great Alexander. Those newcomers the Romans are threatening us. Any assistance you could provide would be much appreciated.");
        }
        else if (get_num_ally("Egyptians") > 0 && get_turn() < 10) {
          if (ctw_is_ally("Egyptians", "Persian") == 1 && ctw_is_war("Greeks", "Persian") == 1) {
            offer.response = $S("Even though our allies the Persians would not be happy with us allying with you, we cannot forget the friendship we had with your father.");
          }
          else if (ctw_is_ally("Egyptians", "Romans") == 1 && ctw_is_war("Greeks", "Romans") == 1) {
            offer.response = $S("Even though our allies the Romans would not be happy with us allying with you, we cannot forget the friendship we had with your father.");
          }
          else if (ctw_is_ally("Egyptians", "Indians") == 1 && ctw_is_war("Greeks", "Indians") == 1) {
            offer.response = $S("Even though our allies the Indians would not be happy with us allying with you, we cannot forget the friendship we had with your father.");
          }
        }
        else {
          switch (random_response) {
            case 1:
              offer.response = $S("We are in complete agreement about this matter of an alliance.");
              break;
            case 2:
              offer.response = $S("We have been in talks with your people about an alliance since the days of your father. What a glorious day it must be for it to finally come true.");
              break;
            default:
              offer.response = $S("Our empires have been friends for many years. We look foward to an even greater friendship.");
              break;
          }
        }
      }
      else if (offer.tribe2 == "Indians") {
        if (get_turn() < 10) {
          if (ctw_is_war("Indians", "Persian") == 1) {
           offer.response = $S("We are very fortunate that you have brought us this proposal. Our war with Persia is getting to be very costly.");
         }
         else {
            switch (random_response) {
              case 1:
                offer.response = $S("We might not know much about one another, but we can both see that an alliance makes sense.");
                break;
              case 2:
                offer.response = $S("While our people may live far apart from one another, they are not far apart in spirit. We agree to this alliance.");
                break;
              default:
                offer.response = parse("Your treaty of alliance shall be signed.");
                break;
            }
          }
        }
      }
      else if (offer.tribe2 == "Persian") {
        if (get_ctw_int("darius_offer") == 3 && get_country_owner("Lydia") == "Greeks" && get_country_owner("Egypt") != "Greeks") {
          offer.response = $S("I have waited a long time for this day. You and I have a special kinship, as leaders of such great nations. I am sure we will work well together."); //1st peace offering
        }
        else if (get_ctw_int("darius_offer") == 1 && get_ctw_int("greeks_stuff") == 2) {
          offer.response = $S("Yes, let us join together as brothers. An alliance will bring prosperity to both our empires."); //2nd peace offering
