int conquest greece2bonus(ref string text) {

  int bonus_value;

  if (get_ctw_int("sparta_peace") == 1) bonus_value = 0;
  else bonus_value = 300;

  if (get_ctw_int("sparta_peace") != 1) text = $S("Start one battle with a bonus of +$NUM0 for each resource, thanks to the spoils of war received in Sparta.");

  return bonus_value;

}